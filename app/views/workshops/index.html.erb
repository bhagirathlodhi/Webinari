<div class="col-lg-12">
  <h3 class="mt-4 mb-4"> Listing Workshops</h3>
	<div class="row">
	 <% @workshops.each do |workshop| %>
			<div class="col-lg-6">
				<div class="card shadow mb-3 mt-2">
					<div class="card-body">
						<h4 class="card-tittle"><%= workshop.name %></h4>
						<p class="lead"><%= truncate(workshop.descrition, length: 80) %></p>
						<h4><span class="badge bg-primary"><%= workshop.total_duration %></h4>
						<h6><span class="badge bg-primary"><%= workshop.daily_duration %></h6>
						<%= link_to 'View Details', workshop, class:"btn btn-danger btn lg" %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
