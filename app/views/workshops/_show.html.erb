<p style = "color:green"><%= notice %></p>

<div class="row ">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow mb-3">
      <div class="card-body">
        <h4 class="card-title mb-2"><%= @workshop.name %></h4>
        <div class="row mt-3">
          <div class="col-lg-7">
            <h4><span class="badge bg-info"><%= @workshop.total_duration %></span></h4>
            <p><span class="badge bg-info"><%= @workshop.daily_duration %></span></p>
          </div>
          <div class="col-lg-5">
            <h4>Total Seats: <span class="badge bg-info"><%= @workshop.total_seat %></span></h4>
            <h4>Remaining Seats: <span class="badge bg-info"><%= @workshop.remaining_seat %></span></h4>
            <h4>Registration Fees: <span class="badge bg-info">$ <%= @workshop.registration_fee %></span></h4>
          </div>
        </div>
        
        <p class="lead mt-3 mb-3"><%= @workshop.descrition %></p>
        <%= form_for :booking, url: bookings_path, method: :post do |form| %>
          <%= form.hidden_field :workshop_id, value: @workshop.id %>

          <div class="d-grid gap-2">
            <% if @workshop.remaining_seat > 0 %>
            <%= form.label :how_many_seat_you_want_to_book, class:"form-outline" %>
            <%= form.number_field :no_of_tickets, {
            prompt: true,
            class: 'form-control',
            onchange: 'this.form.submit()', min: 1,
            maxlength: @workshop.remaining_seat
          } %>
          <% else %>
            <span>This workshop is fully booked.</span>
          <% end %>
            </div>
        <% end %>
        <div class="d-flex">
        <%= link_to "Back to workshops", workshops_path, class: "btn btn-outline-danger btn-lg me-auto mt-3" %>
        <% if @workshop.remaining_seat > 0 %>
          <%= button_to "payment", payment_index_path, params: {id: @workshop.id}, data: {turbo: false}, class:"mt-3 btn btn-outline-success btn-lg"%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
 
  
        

      