<div class="row">
  <div class="col-lg-8 mt-4">
    <div class="card shadow">
      <div class="card-body">
        <h4 class="card-tittle"><%= @workshop.name%></h4>
        <div class=row mt-3>
          <div class="col-lg-7">
            <h4><span class="badge bg-primary"><%= @workshop.total_duration %></span></h4>
            <h4><span class="badge bg-primary"><%= @workshop.daily_duration%></span></h4>

          </div>
          <div class="col-lg-5">
            <h4>Total Seat: <span class="badge bg-primary"><%= @workshop.total_seat%></span></h4>
            <h4>remaining Seat: <span class="badge bg-primary"><%= @workshop.remaining_seat%></span></h4>
            <h4>Registration Fee: <span class="badge bg-primary"><%= @workshop.registration_fee%></span></h4>
          </div>
        </div>
        <p class="lead"><%= @workshop.descrition %></p>
        <%= link_to "Back", workshops_path, class:"btn btn-outline-danger btn-lg mt-3"%>
      </div>
    </div>
  </div>
  <div class="col-lg-4 mt-4">
    <div class="card shadow mb-3">
      <div class="card-body">
        <h4 class="card-tittle text-center mb-2"> Reserve Your seat now</h4>
        <%= form_with url: "#", data: {turbo: false } do | form | %>
          <%= form.hidden_field :workshop_id, value: @workshop.id %>
          <div class="form-group">
            <%= form.label :full_name, class:"mb-2 mt-2"%>
            <%= form.text_field :full_name, class:"form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :email, class:"mb-2 mt-2"%>
            <%= form.email_field :email, class:"form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :contact_number, class:"mb-2 mt-2"%>
            <%= form.text_field :contact_number, class:"form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :no_of_seat_you_want_to_book, class:"mb-2 mt-2"%>
            <%= form.number_field :no_if_tickets, class:"form-control", required: true, min: 1, max: @workshop.remaining_seat %>
          </div>

          <h4 class=" text-center mt-4 mb-3">Card Details</h4>
          <hr>

          <div class="form-group">
            <%= form.label :card_number, class:"mb-2 mt-2"%>
            <%= form.text_field :card_number, class:"form-control", required: true %>
          </div>

          <div class="row">
            <div class="col-lg-6">
              <div class="form-group">
                <%= form.label :cvv, class:"mb-2 mt-2" %>
                <%= form.text_field :cvv, class:"form-control", required: true, maxlength: 4%>
              </div>
            </div>

            <div class="col-lg-3">
              <div class="form-group">
                <%= form.label :month, class:"mb-2 mt-2" %>
                <%= form.number_field :exp_month, class:"form-control", required: true, min: 1, max: 12%>
              </div>
            </div>

            <div class="col-lg-3">
              <div class="form-group">
                <%= form.label :year, class:"mb-2 mt-2" %>
                <%= form.number_field :exp_year, class:"form-control", required: true, min: 2023, max: 2027%>
              </div>
            </div>
          </div>

          <div class="d-grid gap-2">
            <%= form.submit "book",class:"btn btn-success mt-3"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>