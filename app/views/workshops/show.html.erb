<p style="color: green"><%= notice %></p>

<div class="row ">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow mb-3">
      <div class="card-body">
        <h4 class="card-title mb-2"><%= @workshop.name %></h4>
        <div class="row mt-3">
          <div class="col-lg-7">
            <h4><span class="badge bg-info"><%= @workshop.total_duration %></span></h4>
            <p><span class="badge bg-info"><%= @workshop.daily_duration %></span></p>
          </div>
          <div class="col-lg-5">
            <h4>Total Sits: <span class="badge bg-info"><%= @workshop.total_seat %></span></h4>
            <h4>Remaining Sits: <span class="badge bg-info"><%= @workshop.remaining_seat %></span></h4>
            <h4>Registration fee: <span class="badge bg-info">$ <%= @workshop.registration_fee %></span></h4>
          </div>
        </div>
        
        <p class="lead mt-3 mb-3"><%= @workshop.descrition %></p>
        <%= form_for :booking, url: bookings_path, method: :post do |form| %>
          <%= form.hidden_field :workshop_id, value: @workshop.id %>

          <%= form.label :no_of_tickets, class:"form-outline" %>
          <%= form.number_field :no_of_tickets, class:"form-control", min: 1, max: @workshop.remaining_seat, required: true %>
          
          <div class="d-grid gap-2">
          <% if @workshop.remaining_seat > 0 %>
            <%= button_to "Book Your seat Now", { controller: 'payment', action: 'create' }, method: :post, class: "mt-3"%>
          <% else %>
            <span>This workshop is fully booked.</span>
          <% end %>
          </div>
        <% end %>
        <%= link_to "Back to workshops", workshops_path, class: "btn btn-outline-danger btn-lg mt-3" %>
      </div>
    </div>
  </div>
 
  
        

      