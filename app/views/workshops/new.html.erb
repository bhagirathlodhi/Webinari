

<section class="bg-dark mt-3 mb-2>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
          <div class="col-xl-6 d-none d-xl-block">
          <img src="https://img.freepik.com/premium-photo/speaker-business-conference-presentation_327072-14651.jpg"
            alt="Responsive image" class="img-fluid"
            style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; height: 100%" />
          </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase text-center">New Workshop</h3>

                <%= form_with model: @workshop, local: true do |form| %>
         
                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <%= form.label :workshop_title %>
                        <%= form.text_field :name, class: "form-control form-control-lg" %>
                      </div>
                    </div>

                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <%= form.label :descrition %>
                        <%= form.text_area :descrition, class: "form-control form-control-lg" %>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <%= form.label :start_date %>
                        <%= form.date_field :start_date, class: "form-control" %>
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <%= form.label :end_date %>
                        <%= form.date_field :end_date, class: "form-control" %>
                      </div>
                    </div>
                  </div>


                  <div class="row">
                    <div  class="col-md-6 mb-4">
                      <div class="form-outline">
                        <%= form.label :start_time %>
                        <%= form.time_field :start_time, class: "form-control" %>
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <%= form.label :end_time %>
                        <%= form.time_field :end_time, class: "form-control" %>
                      </div>
                    </div>
                  </div>


                  <div class="row">
                   <div  class="col-md-6 mb-4">
                      <div class="form-outline mb-4">
                        <%= form.label :total_seat %>
                        <%= form.number_field :total_seat, class: "form-control" %>
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline mb-4">
                        <%= form.label :remaining_seat %>
                        <%= form.number_field :remaining_seat, class: "form-control" %>
                      </div>
                    </div>
                  </div>
                 

                  <div class="form-outline mb-4">
                    <%= form.label :registration_fee %>
                    <%= form.number_field :registration_fee, class: "form-control" %>
                  </div>

                  <div class="d-flex justify-content-end pt-3">
                    <%= form.submit "save", class: "btn btn-primary btn-lg w-100 mt-4" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>