
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login_form_container mx-auto">
      <div class="login_form center">
        <h2>Login</h2>
        <div class="input_group">
          <%= f.label :email__ID %><br />
          <%= f.email_field :email, autofocus: true, placeholder:"Enter Username", autocomplete: "email" %>
        </div>

        <div class="input_group">
          <%= f.label :password %><br />
          <%= f.password_field :password, placeholder:" Enter Password", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="input_group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="button_group text-center" id="login_button">
          <%= f.submit "Log in" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
  
