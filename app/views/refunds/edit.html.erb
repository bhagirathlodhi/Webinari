<div class="row">
  <div class="col-lg-6 mt-5">
    <div class="card shadow">
      <div class="card-body">
        <%= form_with(model: @refund, html: {data: { turbo: false} } ) do | form |%>
          
          <div class="form-group mb-3">
            <%= form.label :no_of_tickets, class:"form-label-mb-2"%>
            <%= form.number_field :no_of_tickets, min: 1, max: @refund.booking.no_of_tickets, required: true, class:"form-control form-control-lg"%>
          </div>

          <div class="form-group mb-3">
            <%= form.submit "Submit Your request", class:"btn btn-success "%>
          </div>

        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-6 mt-5">
    <div class="card shadow">
      <div class="card-body">
        <h4> Your Booking Details </h4>
        <p class="lead"> <strong> Booking For :</strong>
          <%= link_to @refund.booking.workshop.name, @refund.booking.workshop, target: '_blank' %>
        </p>
        
        <p class="lead"> <strong> total tickets booked :</strong>
          <%= @refund.booking.no_of_tickets %>
        </p>

        <p class="lead"> <strong>total amount paid :</strong>
          <%= @refund.booking.no_of_tickets * @refund.booking.workshop.registration_fee  %>
        </p>

        <p class="lead"> <strong> Booking Date :</strong>
          <%= @refund.booking.created_at.strftime("%d, %a, %B, %Y") %>
        </p>
      </div>
    </div>
  </div>
</div>